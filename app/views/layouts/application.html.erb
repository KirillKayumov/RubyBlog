<!DOCTYPE html>
<html>
<head>
  <title>Super awesome blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default">
	  <div class="container">
	    
	    <div class="navbar-header"

	      <a class="navbar-brand" href="/"> </a>
	    </div>
	    <ul class="nav navbar-nav navbar-right">
	    <% if user_signed_in? %>
	    <li>
	    <%= link_to "Edit profile", edit_user_registration_path %>
	    </li>

	    <li>
	    <%= link_to "Sing out", destroy_user_session_path, method: :delete%>
	    </li>
	    
	    <% else %>
	    <li>
	    <%= link_to "Sing in",  new_user_session_path %>
	    </li>

	    <li>
	    <%= link_to "Sing up", new_user_registration_path %>
	    </li>
	    
	    <% end %>
	    </ul>
	   </div>
	 </nav> 
	 <% if user_signed_in? %>
	 <div class="masthead">

		 	<h3 class="text-muted"> <center>Welcome to this Blog!</center></h3>
		  <nav>
		  <ul class="nav nav-tabs">
		      <li class="nav-item">
		  		<li role="tab" class="active"><a href="/" data-toggle="tab">Home</a></li>

		 		<li role="tab" ><a href="/users/edit" data-toggle="tab">Profile</a></li>
	  	  	  </li>	
	  	  </ul>
		  </nav>
	</div>
	
	 <% else %>
	
	 <% end %>
	 <div class="container"> 
	 <%= yield %>
	 </div>

</body>
</html>
